{
  "manifest_version": 3,
  "name": "Reprompt-It",
  "version": "0.5.0",
  "description": "Right-click selected text to rephrase it as Detailed, Concise, or Professional using GPT-4/5 or Gemini 2.x.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage",
    "notifications"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"          
  },

  "options_page": "options.html",

  "commands": {
    "_execute_action": {
      "suggested_key": { "default": "Ctrl+Shift+R" },
      "description": "Open extension popup"
    },
    "toggle_provider": {
      "suggested_key": { "default": "Ctrl+M" },
      "description": "Toggle provider (OpenAI â†” Gemini)"
    }
  },
  
  "action": {
    "default_title": "Reprompt-It",
    "default_popup": "popup.html"
  },


  "web_accessible_resources": [
    { "resources": ["models.js"], "matches": ["chrome-extension://*/*"] }
  ]
}

