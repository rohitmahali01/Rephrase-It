{
  "manifest_version": 3,
  "name": "Rephrase-It",
  "version": "0.1.0",
  "description": "Right-click selected text to rephrase it as Detailed, Concise, or Professional.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": { "service_worker": "background.js" },
  "options_page": "options.html",
  "commands": {
    "_execute_action": {
      "suggested_key": { "default": "Ctrl+Shift+R" },
      "description": "Open extension popup"
    }
  },
  "action": { "default_title": "Rephrase-It" }
}
